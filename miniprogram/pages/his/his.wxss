/* pages/his/his.wxss */
.nav{
  width: 100%;
  display: flex;
  padding: 10px 0;
  justify-content: space-around;
  background-color: #fff;
  color: #999;
  font-size: 28rpx;
}
.active{
  font-size: 30rpx;
  color: #333;
}
.container{
  padding: 20rpx;
}
.imfo{
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}
.imfo image{
  border-radius: 20rpx;
  height: 400rpx;
}
.txt{
  padding: 20rpx 20rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.txt text{
  line-height: 50rpx;
}
.txt text:nth-child(2){
  display: block;
  font-size: 28rpx;
  color: #666;
}
