/* pages/sub/sub.wxss */
.sub{
  width: 100%;
  height: 100vh;
  background-color: #fff;
}
.com{
  padding: 20rpx;
  background-color: #fff;
}
.com textarea{
  width: 100%;
  font-size: 28rpx;
  height: 200rpx;
}
.plh{
  color: #999;
}
.tip{
  width: 100%;
}
.tip text{
  display: block;
  text-align: right;
  color: #999;
  font-size: 28rpx;
}
.mainimg{
  overflow: hidden;
}
.take{
  width: 100%;
  float: left;
  box-sizing: border-box;
}
.take image{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 0 0 30rpx;
}
.add{
  margin-top: 30rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
  color: #fff;
  font-size: 100rpx;
  line-height: 200rpx;
  text-align: center;
  margin-left: 30rpx;
}
.btn{
  width: 100%;
  margin-top: 30rpx;
}
.btn text{
  display: block;
  float: right;
  width: 100rpx;
  height: 50rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #00B26A;
  border-radius: 6rpx;
  text-align: center;
  line-height: 50rpx;
  margin-right: 30rpx;
}