/* pages/sub/sub.wxss */
.sub{
  width: 100%;
  height: 100vh;
  background-color: #fff;
}
.com{
  padding: 20rpx;
  background-color: #fff;
}
.com textarea{
  /* border: 1px solid #000; */
  width: 100%;
  font-size: 28rpx;
  height: 200rpx;
}
.plh{
  color: #999;
}
.tip{
  width: 100%;
}
.tip text{
  display: block;
  text-align: right;
  color: #999;
  font-size: 28rpx;
}
.take{
  margin-top: 30rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
  color: #fff;
}
.take view{
  font-size: 100rpx;
  line-height: 200rpx;
  text-align: center;
}
.btn{
  width: 100%;
  margin-top: 30rpx;
}
.btn text{
  display: block;
  float: right;
  width: 100rpx;
  height: 50rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #00B26A;
  border-radius: 6rpx;
  text-align: center;
  line-height: 50rpx;
  margin-right: 30rpx;
}